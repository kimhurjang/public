<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mhbc.mapper.CustomMapper">

    <select id="selectAll" resultType="MemberEntity">
        select *
        from member
    </select>

    <select id="selectName" parameterType="String" resultType="MemberEntity">
        select * from member
        <choose>
            <when test="name != null and name != ''">
                where name like '%${a}%'
            </when>
            <otherwise>
                where idx > 0
            </otherwise>
        </choose>
    </select>



</mapper>