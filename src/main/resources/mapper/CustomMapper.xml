<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mhbc.mapper.CustomMapper">
    <select id="selectAll" resultType="MemberEntity">
        select * from member
    </select>
    <select id="selectId" parameterType="String" resultType="MemberEntity">
        select * from member
        <choose>
            <when test=" userid != null and userid != '' ">
                where userid like '%${userid}%'
            </when>
            <otherwise>
                where idx > 0
            </otherwise>

        </choose></select>


</mapper>